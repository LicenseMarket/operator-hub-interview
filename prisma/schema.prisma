// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres:123@localhost:5432/lcmarket"
}

// prisma/schema.prisma

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  roles    Role[]
  // Add other user-related fields as needed
  Product  Product[]
  Order    Order[]
}

model Role {
  id     Int    @id @default(autoincrement())
  name   String @unique
  // Add other role-related fields as needed
  User   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

model Product {
  id            Int     @id @default(autoincrement())
  name          String
  assignee      User    @relation(fields: [userId], references: [id])
  executionTime Int
  // Add other product-related fields as needed
  userId        Int
  Order         Order[]
}

model Order {
  id          Int      @id @default(autoincrement())
  orderNumber String   @unique
  product     Product  @relation(fields: [productId], references: [id])
  assignedTo  User     @relation(fields: [userId], references: [id])
  orderTime   DateTime
  dueTime     DateTime
  // Add other order-related fields as needed
  productId   Int
  userId      Int
}
